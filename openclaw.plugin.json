{
  "id": "crisp",
  "name": "Crisp",
  "description": "Crisp website chat channel for OpenClaw",
  "channels": ["crisp"],
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "websiteId": {
        "type": "string",
        "description": "Crisp website ID (UUID)"
      },
      "apiKeyId": {
        "type": "string",
        "description": "Crisp API key identifier"
      },
      "apiKeySecret": {
        "type": "string",
        "description": "Crisp API key secret"
      },
      "webhookPath": {
        "type": "string",
        "default": "/crisp-webhook",
        "description": "Webhook endpoint path"
      },
      "webhookSecret": {
        "type": "string",
        "description": "Secret for webhook URL validation"
      },
      "autoReply": {
        "type": "boolean",
        "default": true,
        "description": "AI auto-responds to visitors"
      },
      "operatorName": {
        "type": "string",
        "default": "Assistant",
        "description": "Name shown as operator in Crisp"
      },
      "notifyOnNew": {
        "type": "boolean",
        "default": false,
        "description": "Send notification on new conversations"
      },
      "notifyTarget": {
        "type": "string",
        "description": "Channel:id for notifications (e.g., telegram:123456)"
      },
      "historyLimit": {
        "type": "number",
        "default": 10,
        "description": "Messages to include as AI context"
      }
    },
    "required": ["websiteId", "apiKeyId", "apiKeySecret", "webhookSecret"]
  },
  "uiHints": {
    "websiteId": {
      "label": "Website ID",
      "placeholder": "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
    },
    "apiKeyId": {
      "label": "API Key ID",
      "sensitive": true
    },
    "apiKeySecret": {
      "label": "API Key Secret",
      "sensitive": true
    },
    "webhookSecret": {
      "label": "Webhook Secret",
      "sensitive": true,
      "placeholder": "random-32-character-string"
    },
    "notifyTarget": {
      "label": "Notification Target",
      "placeholder": "telegram:123456789"
    }
  }
}
